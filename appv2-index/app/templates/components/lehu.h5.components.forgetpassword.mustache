<!--顶部-->
<header class="header">
    <a href="javascript:void (0)" class="back"></a>
    <h2>忘记密码</h2>
</header>

<!--中间-->
<section class="login-main">

    <div class="login-protrait">
        <img src="images/login/logo.png">
        <p>汇银乐虎全球家</p>
    </div>
    <!--错误信息提示-->
    <div class="item item-tips">
        <div class="err-msg">用户名不存在</div>
    </div>
    <!--登录表单-->
    <div class="login-form">

        <div class="item item-phone">
            <input class="txt-input txt-phone" type="number" pattern="\d*" placeholder="请输入手机号码">
        </div>

        <div class="item item-sms-captcha">
            <input class="txt-input txt-sms-captcha" type="tel" autocomplete="off" placeholder="请输入验证码">
            <a href="javascript:void (0)" class="btn-retransmit">获取验证码</a>
        </div>

        <div class="item item-password">
            <input class="txt-input txt-password" type="password" autocomplete="off" placeholder="请设置密码（8-20个字符）"
                   required>
            <b class="tp-btn btn-off"></b>
        </div>

        <div class="item item-btns">
            <a class="btn-login btn-findpwd btn-disabled" href="javascript:void (0)">重置密码</a>
        </div>
    </div>
</section>
<!--/中间-->
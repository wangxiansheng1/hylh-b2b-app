
<!-- 顶部 -->
<header class="header">
    <a href="javascript: void (0)" class="back"></a>
    <h2>登录</h2>
</header>

<!--中间-->
<section class="login-main">

    <div class="login-protrait">
        <img src="images/login/logo.png">
        <p>汇银乐虎全球家</p>
    </div>


    <!--错误信息提示-->
        <div class="item item-tips">
            <div class="err-msg">用户名不存在</div>
        </div> 
        <!--登录表单-->
        <div class="login-form">
            <div class="item item-username">
                <input class="txt-input txt-username" type="number" pattern="\d*" placeholder="您的手机号码" >
            </div>
            
            <div class="item item-password"  style="display: none">
                <input class="txt-input txt-password" type="password" autocomplete="off" placeholder="输入密码">
                <b class="tp-btn btn-off"></b>
            </div>
              
            <div class="item item-tab item-sms-captcha">
                 <input class="txt-input txt-sms-captcha" type="tel" autocomplete="off" placeholder="输入验证码">
                 <a href="javascript: void (0)" class="btn-retransmit">获取验证码</a>
            </div>

            <div class="item item-login-option">
              <span class="retrieve-password">
                  <a href="javascript: void (0)">忘记密码？</a>
              </span>
            </div>

            <div class="item item-btns item-login">
                <a class="btn-login btn-disabled" href="javascript: void (0)">开启环球购物</a>
            </div>

            <div class="item item-res">
              <span class="retrieve-res">
                  <a class="btn-res btn-disabled register" href="javascript: void (0)">立即注册</a>
              </span>
                <span class="retrieve-sms">
                  <a class="login-tabs login-tab-psd" href="javascript: void (0)">密码登录</a>
              </span>
            </div>

        </div>
</section>
<!--/中间-->